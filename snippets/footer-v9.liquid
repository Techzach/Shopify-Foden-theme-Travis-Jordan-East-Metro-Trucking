{% if section.settings.select_fts == "footer_v9" %}
{% if template contains 'index' %}
<footer class="footer_v9" style="background-color : {{section.settings.ft_home_bg_footer}}">
  <div class="top-footer">
    <div class="container container-v3">    
      <div class="row">
        <div class="col-lg-6 col-md-12">
          <div class="row footer-left">
            <div class="col-md-4">
              <div class="info_footer">
                <div class="title_footer">          
                  <h4 class="mb-0 title_border">{{settings.titlecolum_fv9_1}}</h4>         
                </div>
                <ul class="list-unstyled mb-0">
                  {% for link in linklists[settings.menu_fv9_1].links %}
                  <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
                  {% endfor %}
                </ul>        
              </div>
            </div>
            <div class="col-md-4">
              <div class="info_footer">
                <div class="title_footer">          
                  <h4 class="mb-0 title_border">{{settings.titlecolum_fv9_2}}</h4>         
                </div>
                <ul class="list-unstyled mb-0">
                  {% for link in linklists[settings.menu_fv9_2].links %}
                  <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
                  {% endfor %}
                </ul>        
              </div>
            </div>
            <div class="col-md-4">
              <div class="info_footer info_contact">
                <div class="title_footer ">          
                  <h4 class="mb-0 title_border">{{settings.titlecolum_fv9_3}}</h4>         
                </div>
                <ul class="list-unstyled mb-0">
                  {% for link in linklists[settings.menu_fv9_3].links %}
                  <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
                  {% endfor %}
                </ul>        
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-md-12 footer-right">
          <div class="info_footer end">
            {% if settings.content_colum_fv4_4 != blank  %}
            <p class="mb-0 content_footer">{{settings.content_colum_fv9_4}}</p>
            {% endif %}

            {% if settings.newsletter_form_action != blank %}
            {% assign form_action = settings.newsletter_form_action %}
            {% else %}
            {% assign form_action = '#' %}
            {% endif %}          
            <form class="needs-validation fv4-form " action="{{form_action}}" method="post">
              <div class="mb-0">                           
                <input type="email" name="EMAIL" class=" text-input" placeholder="{{ 'general.newsletter_form.newsletter_email' | t }}">                 
              </div>
              <button class="btn" type="submit">
                Submit
              </button>
            </form>         
          </div>
        </div>
      </div>
    </div>
  </div>
  {% if settings.enable_fv9_bottom %}
  <div class="copyright">
    <div class="container container-v3">
      <div class="row align-items-center">
        <div class="col-md-4 {% if settings.enable_rtl_mode %} text-md-right {% else %}text-md-left {% endif %} text-center">
          <div class="logo-footer">
            {% if settings.logo_svg9 !=blank %}
            <div class="logosvg m-auto m-md-0" style="max-width:{{settings.fv9_main_logo_maxwidth}}px;">
              <a class="d-block" href="{{shop.url}}">{{settings.logo_svg9}}</a>
            </div>          
            {% else %}            
            <a href="{{shop.url}}" class="logo">
              {% if settings.fv9_main_logo != blank %}
              <img src="{{settings.fv9_main_logo | img_url:'master'}}"  width="{{settings.fv9_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
              {% else %}
              <img src="//via.placeholder.com/127x35" width="{{settings.fv9_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
              {% endif %}
            </a>
            {% endif %}
          </div>
        </div>

        <div class="col-md-4  text-center">
          {% if settings.fv9_bottom_payment_img != blank %}
          <img src="{{settings.fv9_bottom_payment_img | img_url:'master'}}"  alt="">
          {% else %}
          <img src="//via.placeholder.com/247x23"  alt="">
          {% endif %}
        </div>

        <div class="col-md-4  {% if settings.enable_rtl_mode %} text-md-left {% else %}text-md-right {% endif %} text-center">
          {% if settings.fv9_bottom_copyright != blank %}
          <p class="text-copyright mb-0">{{settings.fv9_bottom_copyright}}</p>
          {% else %}
          {% if settings.enable_rtl_mode %}
          <div class="text-copyright mb-0"><p>© <a href="https://www.shopify.com/?ref=shopifycenter" rel="nofollow" target="_blank" class=""> Powered by Shopify.</a>  <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover link"> ThemeOcean </a> By  <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover bold">  Foden </a> | 2021 Copyright   </p> 
          </div>          
          {% else %}
          <div class="text-copyright mb-0"><p>© Copyright 2021 | <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover bold">  Foden </a> By <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover link"> ThemeOcean.</a><a href="https://www.shopify.com/?ref=shopifycenter" rel="nofollow" target="_blank" class=""> Powered by Shopify.</a></p> 
          </div>
          {% endif %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}

</footer>
<style>
  .footer_v9 .top-footer .title_footer h4{
    color : {{section.settings.ft_home_color_heading}};
  }
  .footer_v9 .top-footer .info_footer ul li a{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v9 .top-footer .info_footer ul li .social-item{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v9 .top-footer .content_footer{
    color : {{section.settings.ft_home_color_heading}};
  }
</style>
{% endif %}
{% endif %}

