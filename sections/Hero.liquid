<section class="hero-slider">
  <div class="hero-slider-wrapper" data-animation="{{ section.settings.slide_animation }}">
    {% for block in section.blocks %}
      <div class="hero-slide" 
           style="background-image: url({{ block.settings.slide_image | image_url }}); 
                  background-size: {{ section.settings.image_size }}; 
                  background-position: {{ section.settings.image_position }};">
        <div class="hero-content" style="text-align: {{ section.settings.text_align }};">
          
          {% if block.settings.heading != blank %}
            <h1 class="hero-heading animated {{ section.settings.text_animation }}" 
                style="color: {{ block.settings.heading_color }}; font-size: {{ block.settings.heading_size }}px;">
              {{ block.settings.heading }}
            </h1>
          {% endif %}

          {% if block.settings.subheading != blank %}
            <p class="hero-subheading animated {{ section.settings.text_animation }}" 
               style="color: {{ block.settings.subheading_color }}; font-size: {{ block.settings.subheading_size }}px;">
              {{ block.settings.subheading }}
            </p>
          {% endif %}

          <div class="hero-buttons">
            {% if block.settings.primary_button_text != blank %}
              <a href="{{ block.settings.primary_button_link }}" class="hero-button primary animated {{ section.settings.text_animation }}"
                 style="background-color: {{ block.settings.primary_button_color }}; 
                        color: {{ block.settings.primary_button_text_color }};">
                {{ block.settings.primary_button_text }}
              </a>
            {% endif %}
          </div>

        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .hero-slider {
    position: relative;
    overflow: hidden;
    height: {{ section.settings.section_height }}vh;
  }

  .hero-slider-wrapper {
    display: flex;
    width: 100%;
    height: 100%;
  }

  .hero-slide {
    min-width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50px;
    transition: all {{ section.settings.animation_speed }}s ease-in-out;
  }

  .animated.fade-in { animation: fadeIn {{ section.settings.animation_speed }}s; }
  .animated.slide-in { animation: slideIn {{ section.settings.animation_speed }}s; }
  .animated.bounce { animation: bounce {{ section.settings.animation_speed }}s; }

  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
  @keyframes slideIn { from { transform: translateY(20px); opacity: 0; } to { transform: translateY(0); opacity: 1; } }
  @keyframes bounce { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(-10px); } }
</style>

{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "select",
      "id": "slide_animation",
      "label": "Slide Animation",
      "options": [
        { "value": "fade", "label": "Fade" },
        { "value": "slide", "label": "Slide" },
        { "value": "zoom", "label": "Zoom" }
      ],
      "default": "slide"
    },
    {
      "type": "select",
      "id": "text_animation",
      "label": "Text Animation",
      "options": [
        { "value": "fade-in", "label": "Fade In" },
        { "value": "slide-in", "label": "Slide In" },
        { "value": "bounce", "label": "Bounce" }
      ],
      "default": "fade-in"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "label": "Animation Speed (seconds)",
      "min": 0.5,
      "max": 3,
      "step": 0.1,
      "default": 1
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Welcome to Our Website"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "primary_button_text",
          "label": "Primary Button Text",
          "default": "Get Started"
        },
        {
          "type": "url",
          "id": "primary_button_link",
          "label": "Primary Button Link",
          "default": "/"
        },
        {
          "type": "color",
          "id": "primary_button_color",
          "label": "Primary Button Background",
          "default": "#ff6600"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
