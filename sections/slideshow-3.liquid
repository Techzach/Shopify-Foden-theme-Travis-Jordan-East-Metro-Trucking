{%- capture style -%}
  --slider-3-section-heading-font-size: {{ section.settings.heading_font_size }}px;
  --slider-3-section-heading-font-weight: {{ section.settings.heading_font_weight }};
  --slider-3-section-subheading-font-size: {{ section.settings.subheading_font_size }}px;
  --slider-3-section-subheading-font-weight: {{ section.settings.subheading_font_weight }};
{%- endcapture -%}

<section
  class="tp-slider-area p-relative z-index-1"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="tp-slider-active-3 swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div
          class="tp-slider-item-3 tp-slider-height-3 p-relative swiper-slide black-bg d-flex align-items-center"
          id="{{ block.id }}"
        >
          <div
            class="tp-slider-thumb-3 include-bg"
            data-background="{% if block.settings.image != blank %}{{ block.settings.image | image_url }}{% else %}{{ 'slider-1.jpg' | asset_url }}{% endif %}"
          ></div>
          <div class="container">
            <div class="row align-items-center">
              <div class="col-xl-6 col-lg-7 col-md-8">
                <div class="tp-slider-content-3">
                  {%- if block.settings.subheading -%}
                    <span>
                      {{- block.settings.subheading -}}
                    </span>
                  {%- endif -%}
                  {%- if block.settings.title -%}
                    <h3
                      class="tp-slider-title-3"
                    >
                      {{ block.settings.title }}
                    </h3>
                  {%- endif -%}
                  <div class="tp-slider-feature-3 d-flex flex-wrap align-items-center p-relative z-index-1 mb-15">
                    {%- if block.settings.slider_feature_1 != blank or block.settings.slider_feature_1_text != blank -%}
                      <div class="tp-slider-feature-item-3 d-flex mb-30">
                        <div class="tp-slider-feature-icon-3">
                          <span>
                            {%- if block.settings.slider_feature_1 != blank -%}
                              {{ block.settings.slider_feature_1 }}
                            {%- endif -%}
                          </span>
                        </div>
                        <div class="tp-slider-feature-content-3">
                          <h3 class="tp-slider-feature-title-3">
                            {%- if block.settings.slider_feature_1_text != blank -%}
                              {{ block.settings.slider_feature_1_text }}
                            {%- endif -%}
                          </h3>
                        </div>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.slider_feature_2 != blank or block.settings.slider_feature_2_text != blank -%}
                      <div class="tp-slider-feature-item-3 d-flex mb-30">
                        <div class="tp-slider-feature-icon-3">
                          <span>
                            {%- if block.settings.slider_feature_2 != blank -%}
                              {{ block.settings.slider_feature_2 }}
                            {%- endif -%}
                          </span>
                        </div>
                        <div class="tp-slider-feature-content-3">
                          <h3 class="tp-slider-feature-title-3">
                            {%- if block.settings.slider_feature_2_text != blank -%}
                              {{ block.settings.slider_feature_2_text }}
                            {%- endif -%}
                          </h3>
                        </div>
                      </div>
                    {%- endif -%}
                    {%- if block.settings.slider_feature_3 != blank or block.settings.slider_feature_3_text != blank -%}
                      <div class="tp-slider-feature-item-3 d-flex mb-30">
                        <div class="tp-slider-feature-icon-3">
                          <span>
                            {%- if block.settings.slider_feature_3 != blank -%}
                              {{ block.settings.slider_feature_3 }}
                            {%- endif -%}
                          </span>
                        </div>
                        <div class="tp-slider-feature-content-3">
                          <h3 class="tp-slider-feature-title-3">
                            {%- if block.settings.slider_feature_3_text != blank -%}
                              {{ block.settings.slider_feature_3_text }}
                            {%- endif -%}
                          </h3>
                        </div>
                      </div>
                    {%- endif -%}
                  </div>
                  {%- if block.settings.button_text -%}
                    <div class="tp-slider-btn-3">
                      <a href="{{ block.settings.button_link }}" class="tp-btn tp-btn-border tp-btn-border-white">
                        {{- block.settings.button_text -}}
                      </a>
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="tp-swiper-dot tp-slider-3-dot d-sm-none"></div>

    <div class="tp-slider-arrow-3 d-none d-sm-block">
      <button type="button" class="tp-slider-3-button-prev">
        <svg
          width="22"
          height="42"
          viewBox="0 0 22 42"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M21 0.999999L1 21L21 41"
            stroke="currentColor"
            stroke-opacity="0.3"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </button>
      <button type="button" class="tp-slider-3-button-next">
        <svg
          width="22"
          height="42"
          viewBox="0 0 22 42"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M1 0.999999L21 21L1 41"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round" />
        </svg>
      </button>
    </div>
  </div>
</section>

