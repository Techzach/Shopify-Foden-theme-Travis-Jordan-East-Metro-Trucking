<div class="grid-section" style="background-color: {{ section.settings.bg_color }}; padding: {{ section.settings.section_padding }}px 0;">
  
  {% if section.settings.heading != blank %}
    <h2 class="grid-heading" style="color: {{ section.settings.heading_color }}; text-align: {{ section.settings.heading_align }}; font-size: {{ section.settings.heading_size }}px;">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  <div class="grid-container" style="gap: {{ section.settings.gap_size }}px; grid-template-columns: repeat({{ section.settings.columns }}, 1fr);">
    {% for block in section.blocks %}
      <div class="grid-item" style="background-color: {{ section.settings.box_bg_color }}; max-width: {{ section.settings.box_width }}px;">
        <h2 class="grid-number" style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.text_size }}px;">
          {{ block.settings.number }}
        </h2>
        <p class="grid-title" style="color: {{ section.settings.text_color }}; font-size: {{ section.settings.subtitle_size }}px;">
          {{ block.settings.title }}
        </p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .grid-section {
    text-align: center;
  }

  .grid-heading {
    margin-bottom: 20px;
    font-weight: bold;
  }

  .grid-container {
    display: grid;
    justify-content: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .grid-item {
    padding: 20px;
    border-radius: 10px;
  }

  .grid-number {
    font-weight: bold;
  }

  .grid-title {
    opacity: 0.8;
  }
</style>

{% schema %}
{
  "name": "Grid Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Dependableâ€™s Impact By the Numbers"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size (px)",
      "min": 16,
      "max": 48,
      "step": 2,
      "default": 32
    },
    {
      "type": "select",
      "id": "heading_align",
      "label": "Heading Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#212527"
    },
    {
      "type": "color",
      "id": "box_bg_color",
      "label": "Box Background Color",
      "default": "rgba(255, 255, 255, 0.1)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "columns",
      "label": "Number of Columns",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "gap_size",
      "label": "Gap Between Items (px)",
      "min": 10,
      "max": 50,
      "step": 5,
      "default": 20
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Number Font Size (px)",
      "min": 12,
      "max": 48,
      "step": 2,
      "default": 24
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "label": "Subtitle Font Size (px)",
      "min": 12,
      "max": 36,
      "step": 2,
      "default": 16
    },
    {
      "type": "range",
      "id": "box_width",
      "label": "Box Width (px)",
      "min": 100,
      "max": 400,
      "step": 10,
      "default": 200
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Section Padding (px)",
      "min": 10,
      "max": 100,
      "step": 5,
      "default": 50
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "Grid Item",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "74 +"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "YEARS OF EXPERIENCE"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Section",
      "blocks": [
        { "type": "grid_item", "settings": { "number": "74 +", "title": "YEARS OF EXPERIENCE" } },
        { "type": "grid_item", "settings": { "number": "1400 +", "title": "DEDICATED EMPLOYEES" } },
        { "type": "grid_item", "settings": { "number": "4 M+", "title": "SQFT OF WAREHOUSE SPACE" } },
        { "type": "grid_item", "settings": { "number": "250 +", "title": "DRIVERS" } },
        { "type": "grid_item", "settings": { "number": "25", "title": "LOCATIONS" } },
        { "type": "grid_item", "settings": { "number": "6", "title": "GLOBAL OFFICES" } }
      ]
    }
  ]
}
{% endschema %}
