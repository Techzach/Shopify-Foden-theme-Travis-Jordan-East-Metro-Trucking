<section class="hero-slider">
  <div class="hero-slider-wrapper">
    {% for block in section.blocks %}
      <div class="hero-slide" style="background-image: url({{ block.settings.slide_image | image_url }});">
        <div class="hero-content" style="text-align: {{ section.settings.text_align }};">
          
          {% if block.settings.heading != blank %}
            <h1 class="hero-heading" style="color: {{ block.settings.heading_color }}; font-size: {{ block.settings.heading_size }}px;">
              {{ block.settings.heading }}
            </h1>
          {% endif %}

          {% if block.settings.subheading != blank %}
            <p class="hero-subheading" style="color: {{ block.settings.subheading_color }}; font-size: {{ block.settings.subheading_size }}px;">
              {{ block.settings.subheading }}
            </p>
          {% endif %}

          <div class="hero-buttons">
            {% if block.settings.primary_button_text != blank %}
              <a href="{{ block.settings.primary_button_link }}" class="hero-button primary" style="background-color: {{ block.settings.primary_button_color }}; color: {{ block.settings.primary_button_text_color }};">
                {{ block.settings.primary_button_text }}
              </a>
            {% endif %}

            {% if block.settings.secondary_button_text != blank %}
              <a href="{{ block.settings.secondary_button_link }}" class="hero-button secondary" style="background-color: {{ block.settings.secondary_button_color }}; color: {{ block.settings.secondary_button_text_color }};">
                {{ block.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>

        </div>
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .hero-slider {
    position: relative;
    overflow: hidden;
    height: {{ section.settings.section_height }}vh;
  }

  .hero-slider-wrapper {
    display: flex;
    width: 400%; /* Adjust for 4 slides */
    height: 100%;
    animation: slideShow 12s infinite linear;
  }

  .hero-slide {
    min-width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 50px;
    opacity: 0;
    transition: opacity 1s ease-in-out;
  }

  .hero-slide:first-child {
    opacity: 1;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
  }

  .hero-heading {
    font-weight: bold;
    margin-bottom: 10px;
  }

  .hero-subheading {
    margin-bottom: 20px;
  }

  .hero-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 20px;
  }

  .hero-button {
    padding: 12px 24px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
  }

  .primary {
    border: 2px solid transparent;
  }

  .secondary {
    border: 2px solid currentColor;
    background: transparent;
  }

  /* New Smooth Animation */
  @keyframes slideShow {
    0% { transform: translateX(0); opacity: 1; }
    25% { transform: translateX(-100%); opacity: 1; }
    50% { transform: translateX(-200%); opacity: 1; }
    75% { transform: translateX(-300%); opacity: 1; }
    100% { transform: translateX(0); opacity: 1; } /* Loop back */
  }
</style>

{% schema %}
{
  "name": "Hero Slider",
  "settings": [
    {
      "type": "range",
      "id": "section_height",
      "label": "Section Height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 75
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Welcome to Our Website"
        },
        {
          "type": "range",
          "id": "heading_size",
          "label": "Heading Font Size (px)",
          "min": 20,
          "max": 60,
          "step": 2,
          "default": 40
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "We provide the best solutions for your needs."
        },
        {
          "type": "range",
          "id": "subheading_size",
          "label": "Subheading Font Size (px)",
          "min": 14,
          "max": 30,
          "step": 2,
          "default": 18
        },
        {
          "type": "color",
          "id": "subheading_color",
          "label": "Subheading Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "primary_button_text",
          "label": "Primary Button Text",
          "default": "Get Started"
        },
        {
          "type": "url",
          "id": "primary_button_link",
          "label": "Primary Button Link",
          "default": "/"
        },
        {
          "type": "color",
          "id": "primary_button_color",
          "label": "Primary Button Background",
          "default": "#ff6600"
        },
        {
          "type": "color",
          "id": "primary_button_text_color",
          "label": "Primary Button Text Color",
          "default": "#ffffff"
        },
        {
          "type": "text",
          "id": "secondary_button_text",
          "label": "Secondary Button Text",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "secondary_button_link",
          "label": "Secondary Button Link",
          "default": "/"
        },
        {
          "type": "color",
          "id": "secondary_button_color",
          "label": "Secondary Button Background",
          "default": "transparent"
        },
        {
          "type": "color",
          "id": "secondary_button_text_color",
          "label": "Secondary Button Text Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Slider",
      "blocks": [
        { "type": "slide" },
        { "type": "slide" }
      ]
    }
  ]
}
{% endschema %}
