{%- capture style -%}
  --slider-2-section-heading-font-size: {{ section.settings.heading_font_size }}px;
  --slider-2-section-heading-font-weight: {{ section.settings.heading_font_weight }};
  --slider-2-section-subheading-font-size: {{ section.settings.subheading_font_size }}px;
  --slider-2-section-subheading-font-weight: {{ section.settings.subheading_font_weight }};
{%- endcapture -%}

<section
  class="tp-slider-area p-relative z-index-1"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="tp-slider-active-2 swiper-container">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="tp-slider-item-2 tp-slider-height-2 p-relative swiper-slide grey-bg-5 d-flex align-items-end">
          {%- if section.settings.show_shape_1 -%}
            <div class="tp-slider-2-shape">
              {%- if section.settings.slider_shape_1 != blank -%}
                <img
                  src="{{ section.settings.slider_shape_1 | image_url }}"
                  alt=""
                  class="tp-slider-2-shape-1"
                  height="auto"
                  width="auto"
                >
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'custom_slider_placeholder_shape_image tp-slider-2-shape-1' }}
              {%- endif -%}
            </div>
          {%- endif -%}
          <div class="container">
            <div class="row align-items-center">
              <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="tp-slider-content-2">
                  {%- if block.settings.subheading -%}
                    <span>
                      {{- block.settings.subheading -}}
                    </span>
                  {%- endif -%}
                  {%- if block.settings.title -%}
                    <h3
                      class="tp-slider-title-2"
                    >
                      {{ block.settings.title }}
                    </h3>
                  {%- endif -%}
                  {%- if block.settings.button_text -%}
                    <div class="tp-slider-btn-2">
                      <a href="{{ block.settings.button_link }}" class="tp-btn tp-btn-border">
                        {{- block.settings.button_text -}}
                      </a>
                    </div>
                  {%- endif -%}
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6">
                <div class="tp-slider-thumb-2-wrapper p-relative">
                  <div class="tp-slider-thumb-2-shape">
                    {%- if section.settings.slider_shape_2 -%}
                      {%- if section.settings.slider_shape_2 != blank -%}
                        <img
                          src="{{ section.settings.slider_shape_2 | image_url }}"
                          alt=""
                          height="auto"
                          width="auto"
                          class="tp-slider-thumb-2-shape-1"
                        >
                      {%- else -%}
                        {{
                          'image'
                          | placeholder_svg_tag: 'custom_slider_placeholder_shape_image tp-slider-thumb-2-shape-1'
                        }}
                      {%- endif -%}
                    {%- endif -%}

                    {%- if section.settings.slider_shape_3 -%}
                      {%- if section.settings.slider_shape_3 != blank -%}
                        <img
                          src="{{ section.settings.slider_shape_3 | image_url }}"
                          alt=""
                          class="tp-slider-thumb-2-shape-2"
                          height="auto"
                          width="auto"
                        >
                      {%- else -%}
                        {{
                          'image'
                          | placeholder_svg_tag: 'custom_slider_placeholder_shape_image tp-slider-thumb-2-shape-2'
                        }}
                      {%- endif -%}
                    {%- endif -%}
                  </div>
                  {%- if block.settings.show_image != blank -%}
                    <div class="tp-slider-thumb-2 text-end">
                      <span class="tp-slider-thumb-2-gradient"></span>
                      {%- if block.settings.image != blank -%}
                        <img src="{{ block.settings.image | image_url }}" alt="" height="auto" width="auto">
                      {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'custom_slider_2_placeholder_image' }}
                      {%- endif -%}
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="tp-swiper-dot tp-slider-2-dot"></div>
  </div>
</section>

