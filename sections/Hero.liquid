<section class="hero-section" style="background: {{ section.settings.bg_color }} url({{ section.settings.bg_image | image_url }}) center/cover no-repeat;">
  <div class="hero-content" style="text-align: {{ section.settings.text_align }};">
    
    {% if section.settings.heading != blank %}
      <h1 class="hero-heading" style="color: {{ section.settings.heading_color }}; font-size: {{ section.settings.heading_size }}px;">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="hero-subheading" style="color: {{ section.settings.subheading_color }}; font-size: {{ section.settings.subheading_size }}px;">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    <div class="hero-buttons">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="hero-button primary" style="background-color: {{ section.settings.primary_button_color }}; color: {{ section.settings.primary_button_text_color }};">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="hero-button secondary" style="background-color: {{ section.settings.secondary_button_color }}; color: {{ section.settings.secondary_button_text_color }};">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>

  </div>
</section>

<style>
  .hero-section {
    display: flex;
    align-items: center;
    justify-content: center;
    height: {{ section.settings.section_height }}vh;
    padding: 50px;
  }

  .hero-content {
    max-width: 800px;
    text-align: center;
  }

  .hero-heading {
    font-weight: bold;
    margin-bottom: 10px;
  }

  .hero-subheading {
    margin-bottom: 20px;
  }

  .hero-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    margin-top: 20px;
  }

  .hero-button {
    padding: 12px 24px;
    border-radius: 5px;
    text-decoration: none;
    font-weight: bold;
  }

  .primary {
    border: 2px solid transparent;
  }

  .secondary {
    border: 2px solid currentColor;
    background: transparent;
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Website"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading Font Size (px)",
      "min": 20,
      "max": 60,
      "step": 2,
      "default": 40
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "We provide the best solutions for your needs."
    },
    {
      "type": "range",
      "id": "subheading_size",
      "label": "Subheading Font Size (px)",
      "min": 14,
      "max": 30,
      "step": 2,
      "default": 18
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#212527"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "range",
      "id": "section_height",
      "label": "Section Height (vh)",
      "min": 50,
      "max": 100,
      "step": 5,
      "default": 75
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Get Started"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link",
      "default": "/"
    },
    {
      "type": "color",
      "id": "primary_button_color",
      "label": "Primary Button Background",
      "default": "#ff6600"
    },
    {
      "type": "color",
      "id": "primary_button_text_color",
      "label": "Primary Button Text Color",
      "default": "#ffffff"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link",
      "default": "/"
    },
    {
      "type": "color",
      "id": "secondary_button_color",
      "label": "Secondary Button Background",
      "default": "transparent"
    },
    {
      "type": "color",
      "id": "secondary_button_text_color",
      "label": "Secondary Button Text Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
