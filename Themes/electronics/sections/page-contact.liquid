      "type": "header",
      "content": "Social Area"
    },
    {
      "type": "image_picker",
      "id": "contact_social_image",
      "label": "Social Image"
    },
    {
      "type": "text",
      "id": "social_heading",
      "label": "Social Heading",
      "default": "Find on social media"
    },
    {
      "type": "text",
      "id": "social_facebook",
      "label": "Facebook"
    },
    {
      "type": "text",
      "id": "social_twitter",
      "label": "Twitter"
    },
    {
      "type": "text",
      "id": "social_linkedin",
      "label": "Linkedin"
    }
  ]
}
