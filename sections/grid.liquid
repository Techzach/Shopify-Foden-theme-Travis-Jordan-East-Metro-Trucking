<div class="grid-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="grid-container">
    {% for block in section.blocks %}
      <div class="grid-item" style="background-color: {{ section.settings.box_bg_color }};">
        <h2 class="grid-number" style="color: {{ section.settings.text_color }};">{{ block.settings.number }}</h2>
        <p class="grid-title" style="color: {{ section.settings.text_color }};">{{ block.settings.title }}</p>
      </div>
    {% endfor %}
  </div>
</div>

<style>
  .grid-section {
    padding: 50px 0;
    text-align: center;
  }

  .grid-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .grid-item {
    flex: 1 1 200px;
    max-width: 200px;
    padding: 20px;
    border-radius: 10px;
  }

  .grid-number {
    font-size: 2rem;
    font-weight: bold;
  }

  .grid-title {
    font-size: 1rem;
    opacity: 0.8;
  }
</style>

{% schema %}
{
  "name": "Grid Section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Section Background Color",
      "default": "#212527"
    },
    {
      "type": "color",
      "id": "box_bg_color",
      "label": "Box Background Color",
      "default": "rgba(255, 255, 255, 0.1)"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "Grid Item",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "74 +"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "YEARS OF EXPERIENCE"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Grid Section",
      "blocks": [
        { "type": "grid_item", "settings": { "number": "74 +", "title": "YEARS OF EXPERIENCE" } },
        { "type": "grid_item", "settings": { "number": "1400 +", "title": "DEDICATED EMPLOYEES" } },
        { "type": "grid_item", "settings": { "number": "4 M+", "title": "SQFT OF WAREHOUSE SPACE" } },
        { "type": "grid_item", "settings": { "number": "250 +", "title": "DRIVERS" } },
        { "type": "grid_item", "settings": { "number": "25", "title": "LOCATIONS" } },
        { "type": "grid_item", "settings": { "number": "6", "title": "GLOBAL OFFICES" } }
      ]
    }
  ]
}
{% endschema %}
