{% if section.settings.select_fts == "footer_v8" %}
{% if template contains 'index' %}
<footer class="footer_v8" >
  <div class="top-footer">
    <div class="container container-v1">    
      <div class="row">
        <div class="col-md-3">
          <div class="info_footer end">
            <div class="logo-top">
              {% if settings.logo_svg8 != lank %}
              <div class="logosvg m-md-0" style="max-width:{{settings.fv8_main_logo_maxwidth}}px;">
                <a class="d-block" href="{{shop.url}}">{{settings.logo_svg8}}</a>
              </div>          
              {% else %}            
              <a href="{{shop.url}}" class="logo">
                {% if settings.fv8_main_logo != blank %}
                <img src="{{settings.fv8_main_logo | img_url:'master'}}"  width="{{settings.fv8_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% else %}
                <img src="//via.placeholder.com/160x46" width="{{settings.fv8_main_logo_maxwidth}}" alt="{{shop.name}}" class="img-fluid">
                {% endif %}
              </a>
              {% endif %}
            </div>
            {% if settings.content_colum_fv8 != blank  %}
            <p class="content_footer">{{settings.content_colum_fv8}}</p>
            {% endif %}
            <div class="list-icon">
              <ul class="list-inline list-unstyled mb-0">
                {% if settings.icon_sc_fv8_1 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv8_1}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv8_1}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv8_2 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv8_2}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv8_2}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv8_3 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv8_3}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv8_3}}"></i></a>
                </li>
                {% endif %}
                {% if settings.icon_sc_fv8_4 !=blank %}
                <li class="list-inline-item">
                  <a href="{{settings.url_sc_fv8_4}}" title="" target="_blank" class="social-item"><i class="{{settings.icon_sc_fv8_4}}"></i></a>
                </li>
                {% endif %}         

              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv8_1}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv8_1].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-md-3">
          <div class="info_footer">
            <div class="title_footer">          
              <h4 class="mb-0 title_border">{{settings.titlecolum_fv8_2}}</h4>         
            </div>
            <ul class="list-unstyled mb-0">
              {% for link in linklists[settings.menu_fv8_2].links %}
              <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
              {% endfor %}
            </ul>        
          </div>
        </div>
        <div class="col-md-3">
              <div class="info_footer">
                <div class="title_footer">          
                  <h4 class="mb-0 title_border">{{settings.titlecolum_fv8_3}}</h4>         
                </div>
                <ul class="list-unstyled mb-0">
                  {% for link in linklists[settings.menu_fv8_3].links %}
                  <li><a href="{{link.url}}" title="{{link.title}}">{{link.title}}</a></li>
                  {% endfor %}
                </ul>        
              </div>
            </div>         
      </div>
    </div>
  </div>
  {% if settings.enable_fv8_bottom %}
  <div class="copyright">
    <div class="container container-v1">
      <div class="row align-items-center">
        <div class="col-md-6  {% if settings.enable_rtl_mode %}text-md-right {% else %}text-md-left{% endif %} text-center">
          {% if settings.fv8_bottom_copyright != blank %}
          <p class="text-copyright mb-0">{{settings.fv8_bottom_copyright}}</p>
          {% else %}
          <div class="text-copyright mb-0"><p class="mb-0">Â© Copyright 2021 | <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover bold">  Foden </a> By <a href="http://themeocean.net/" rel="nofollow" target="_blank" class="underline_hover link"> ThemeOcean.</a><a href="https://www.shopify.com/?ref=shopifycenter" rel="nofollow" target="_blank" class=""> Powered by Shopify.</a></p> 
          </div> 
          {% endif %}
        </div>
        <div class="col-lg-6 col-md-6 {% if settings.enable_rtl_mode %}text-md-left {% else %}text-md-right {% endif %} text-center">
          {% if settings.fv8_bottom_payment_img != blank %}
          <img src="{{settings.fv8_bottom_payment_img | img_url:'master'}}"  alt="">
          {% else %}
          <img src="//via.placeholder.com/247x23"  alt="">
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  {% endif %}
</footer>
<style>
  .footer_v8 .top-footer{
    background : {{section.settings.ft_home_bg_footer}};
  }
  .footer_v8 .top-footer .info_footer h4{
    color:{{section.settings.ft_home_color_heading}};
  }
  .footer_v8 .top-footer .info_footer h4:before{
    background-color:{{section.settings.ft_home_color_heading}};
  }
  .footer_v8 .copyright{
    background : {{section.settings.ft_home_bg_footer}};
  }
  .footer_v8 .top-footer .info_footer ul li a{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v8 .top-footer .info_footer ul li{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v8 .top-footer .info_footer .content_footer{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v8 .copyright .text-copyright{
    color : {{section.settings.ft_home_color_text}};
  }
  .footer_v8 .copyright .text-copyright a {
    color : {{settings.color_main2}};
  }
  .footer_v8 .top-footer .info_footer.end .list-icon ul li a{
    color : {{section.settings.ft_home_color_text}};
  }
</style>
{% endif %}
{% endif %}

