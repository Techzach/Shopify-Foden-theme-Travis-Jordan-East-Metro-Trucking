{%- capture style -%}
  --slider-4-section-heading-font-size: {{ section.settings.heading_font_size }}px;
  --slider-4-section-heading-font-weight: {{ section.settings.heading_font_weight }};
  --slider-4-section-subheading-font-size: {{ section.settings.subheading_font_size }}px;
  --slider-4-section-subheading-font-weight: {{ section.settings.subheading_font_weight }};
{%- endcapture -%}

<section class="tp-slider-area p-relative z-index-1 fix" style="{{ style | strip | strip_newlines }}">
  <div class="tp-slider-active-4 khaki-bg">
    {% for block in section.blocks %}
      <div class="tp-slider-item-4 tp-slider-height-4 p-relative khaki-bg d-flex align-items-center">
        {%- if block.settings.image != blank -%}
          <div class="tp-slider-thumb-4">
            {%- if block.settings.image != blank -%}
              <img src="{{ block.settings.image | image_url }}" alt="slider item" height="auto" width="auto">
            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'custom_slider_2_placeholder_image' }}
            {%- endif -%}
            <div class="tp-slider-thumb-4-shape">
              <span class="tp-slider-thumb-4-shape-1"></span>
              <span class="tp-slider-thumb-4-shape-2"></span>
            </div>
          </div>
        {%- endif -%}

        <div class="tp-slider-video-wrapper">
          <div class="tp-slider-video transition-3">
            {{ block.settings.video | media_tag: image_size: '400x' }}
          </div>
          <div class="tp-slider-play">
            <button type="button" class="tp-slider-play-btn tp-slider-video-move-btn tp-video-toggle-btn">
              {% if block.settings.shape_image != blank %}
                <img
                  class="text-shape"
                  src="{{ block.settings.shape_image | image_url }}"
                  alt="Shape Image"
                  width="auto"
                  height="auto"
                >
              {% endif %}
              <span class="play-icon">
                <svg
                  width="19"
                  height="21"
                  viewBox="0 0 19 21"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path d="M0.607695 20.7988L0.607695 0.0142176L18.6077 10.4065L0.607695 20.7988Z" fill="currentColor" />
                </svg>
              </span>
              <span class="pause-icon">
                <svg
                  width="15"
                  height="20"
                  viewBox="0 0 15 20"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <rect
                    width="5"
                    height="20"
                    fill="currentColor" />
                  <rect
                    x="10"
                    width="5"
                    height="20"
                    fill="currentColor" />
                </svg>
              </span>
            </button>
          </div>
        </div>

        <div class="container">
          <div class="row align-items-center">
            <div class="col-xl-6 col-lg-6 col-md-8">
              <div class="tp-slider-content-4 p-relative z-index-1">
                {%- if block.settings.subheading -%}
                  <span>
                    {{- block.settings.subheading -}}
                  </span>
                {%- endif -%}
                {%- if block.settings.title -%}
                  <h3
                    class="tp-slider-title-4"
                  >
                    {{ block.settings.title }}
                  </h3>
                {%- endif -%}
                {%- if block.settings.button_text -%}
                  <div class="tp-slider-btn-4">
                    <a href="{{ block.settings.button_link }}" class="tp-btn tp-btn-border tp-btn-border-white">
                      {{- block.settings.button_text -}}
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <div class="tp-slider-arrow-4"></div>

  <div class="tp-slider-nav-wrapper d-none d-xl-block">
    <div class="container">
      <div class="tp-slider-nav">
        <div class="tp-slider-nav-active">
          {% for block in section.blocks %}
            {%- if block.settings.slider_nav_heading != blank -%}
              <div class="tp-slider-nav-item d-flex align-items-center">
                {%- if block.settings.slider_nav_heading_image != blank -%}
                  <div class="tp-slider-nav-icon">
                    <span>
                      <img src="{{ block.settings.slider_nav_heading_image | image_url }}" alt="">
                    </span>
                  </div>
                {%- endif -%}
                <div class="tp-slider-nav-content">
                  <h3 class="tp-slider-nav-title">
                    {{ block.settings.slider_nav_heading }}
                  </h3>
                </div>
              </div>
            {%- endif -%}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

